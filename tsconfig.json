{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@suggester/*": ["./packages/*/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "packages/**/dist",
    "packages/**/__tests__/**/*.test.ts"
  ]
}